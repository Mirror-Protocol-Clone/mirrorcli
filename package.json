{
  "name": "mirrorcli",
  "version": "0.0.1",
  "description": "Command-line interface for Mirror Protocol",
  "main": "dist/bundle.node.js",
  "typings": "dist/index.d.ts",
  "author": "Mirror Protocol",
  "license": "MIT",
  "bin": {
    "mirrorcli": "bin/mirrorcli"
  },
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build": "tsc --module commonjs && webpack --mode production",
    "test": "jest",
    "prettier": "prettier --write ./src/**/*.ts",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "doc": "typedoc",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "prettier --write",
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "npm i"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.33",
    "@types/lodash": "^4.14.165",
    "@types/yaml": "^1.9.7",
    "@typescript-eslint/eslint-plugin": "^4.8.0",
    "@typescript-eslint/parser": "^4.8.0",
    "eslint": "^7.13.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0"
  },
  "dependencies": {
    "@mirror-protocol/mirror.js": "^1.0.4",
    "@terra-money/terra.js": "^1.0.1",
    "bluebird": "^3.7.2",
    "chalk": "^4.1.0",
    "commander": "^6.2.0",
    "jsome": "^2.5.0",
    "jsonschema": "^1.4.0",
    "lodash": "^4.17.20",
    "prettycli": "^1.4.3",
    "yaml": "^1.10.0",
    "yesno": "^0.3.1"
  }
}
